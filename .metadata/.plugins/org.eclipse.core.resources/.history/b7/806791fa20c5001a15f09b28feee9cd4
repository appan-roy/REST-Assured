package countryInfoServices;

import org.testng.Assert;
import org.testng.annotations.Test;
import static io.restassured.RestAssured.*;
import static io.restassured.matcher.RestAssuredMatchers.*;
import static org.hamcrest.Matchers.*;
import io.restassured.response.Response;

public class GetCountries {

	String req = "http://webservices.oorsprong.org/websamples.countryinfo/CountryInfoService.wso?WSDL";
	
	Response res = get(req);
	
	@Test
	public void printResponseAttibutes() {
		
		System.out.println(res.asString());
		
		System.out.println(res.getBody().asString());
		
		System.out.println(res.getStatusCode());
		
		System.out.println(res.getStatusLine());
		
		System.out.println(res.getHeader("content-type"));
		
		System.out.println(res.getTime());
		
	}
	
	@Test
	public void checkStatusCode1() {
		
		int statusCode1 = res.getStatusCode();
		
		Assert.assertEquals(statusCode1, 200);
		
	}
	
	@Test
	public void checkStatusCode2_REQ1() {
		
		given().
			get(req).
		then().
			statusCode(200);
	
	}
	
	@Test
	public void logResponse_REQ1() {
				
		given()
			.get(req)
		.then()
			.log().all();
			
	}

}
