package chaining;

import org.json.simple.JSONObject;
import org.testng.annotations.Test;

import io.restassured.http.ContentType;
import io.restassured.response.Response;
import static io.restassured.RestAssured.*;

import java.util.ArrayList;

public class APIChaining {
	
	@Test
	public void getUsers() {
		
		baseURI = "http://localhost:3000";
		
		Response res = given().contentType(ContentType.JSON).log().all().get("/students/"+5);
		
		String fname = res.then().extract().path("firstName");
		String lname = res.then().extract().path("lastName");
		
		JSONObject json = new JSONObject();
		
		json.put("firstName", fname);
		json.put("lastName", lname);
		json.put("fideRating", 2555);
		
		given()
			.header("Content-Type", "application/json")
			.contentType(ContentType.JSON)
			.accept(ContentType.JSON)
			.body(json.toJSONString()).
		when()
			.post("/users").
		then()
			.statusCode(201)
			.log().all();
		
		
		
//		for(int i=16; i<=20; i++) {
//			
//			Response res = given().contentType(ContentType.JSON).log().all().get("/"+i);
//			
//			String fname = res.then().extract().path("firstName");
//			
//			String lname = res.then().extract().path("lastName");
//
//		}
		
	}

}
